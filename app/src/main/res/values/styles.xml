<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="NewzTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Newz.Title</item>
    </style>


    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Newz.Settings</item>
    </style>

    <!-- Settings activity action bar styles -->
    <style name="ActionBar.Solid.Newz.Settings" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">homeAsUp</item>
    </style>


    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Newz.Title" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>

    </style>

    <!-- Style for forecast listview -->
    <style name="NewzListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <style name="first_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>


    <!-- Styles could be more efficiently provided, with inheritance -->
    <style name="first_section">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="first_abstract">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="other_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="other_section" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="other_date">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="other_author">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
