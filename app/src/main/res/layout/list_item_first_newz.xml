<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/touch_selector"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_first_icon"
            android:layout_gravity="center"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/first_title"
                     android:gravity="center"
                    android:id="@+id/list_first_title"/>

            <TextView
                android:layout_width="match_parent"
                style="@style/other_section"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/list_first_section"/>

            <TextView
                android:layout_width="match_parent"
                style="@style/other_date"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/list_first_date"/>

            <TextView
                    android:id="@+id/list_first_desc"
                    style="@style/first_abstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>